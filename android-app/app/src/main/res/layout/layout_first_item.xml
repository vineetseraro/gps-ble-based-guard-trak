<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_xlarge"
        android:padding="@dimen/padding_xsmall"
        android:background="@color/bg">

        <TextView
            android:id="@+id/nameTxtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_action_bar"
            android:text="" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:layout_below="@+id/nameTxtVw"
            android:layout_width="@dimen/chat_image_size"
            android:layout_height="@dimen/chat_image_size"
            android:visibility="gone"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/commentTxtVw"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:layout_below="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ig_white"
            android:text="" />

        <TextView
            android:id="@+id/timeTxtVw"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:layout_below="@+id/commentTxtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textStyle="italic"
            android:textSize="@dimen/textsize_xsmall"
            android:text=""
            android:layout_gravity="right" />
    </LinearLayout>

</RelativeLayout>

